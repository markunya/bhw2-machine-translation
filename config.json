{
    "exp": {
        "project_name": "dl_bhw_2",
        "device": "cuda",
        "seed": 42,
        "use_wandb": false,
        "log_num_samples": 10
    },
    "data": {
        "train_src_texts_file_path": "datasets/data/train_small.de-en.de",
        "train_tgt_texts_file_path": "datasets/data/train_small.de-en.en",
        "val_src_texts_file_path": "datasets/data/val.de-en.de",
        "val_tgt_texts_file_path": "datasets/data/val.de-en.en",
        "inf_texts_file_path": "datasets/data/test1.de-en.de",

        "src_min_freq": 5,
        "tgt_min_freq": 5,

        "train_batch_size": 64,
        "val_batch_size": 64,
        "workers": 4
    },
    "checkpoint_path": null,
    "inference": {
        "output_dir": "./",
        "test_batch_size": 16
    },
    "train": {
        "translator": "transformer",
        "translator_args": {
            "emb_size": 256,
            "nhead": 8,
            "num_encoder_layers": 1,
            "num_decoder_layers": 1
        },
        "optimizer": "adamW",
        "optimizer_args": {
            "lr": 0.001
        },
        "scheduler": "exponential",
        "scheduler_args": {
            "gamma": 1.0,
            "reduce_time": "step"
        },
        "val_metrics": [
            "bleu"
        ],
        "start_step": 1,
        "steps": 10,
        "checkpoint_step": 10,
        "val_step": 300,
        "checkpoints_dir": "./checkpoints"
    },
    "losses": {
        "cross_entropy_loss": {
            "coef": 1.0,
            "args": {
                "label_smoothing": 0.1
            }
        }
    }
}
