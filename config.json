{
    "exp": {
        "project_name": "dl_bhw_2",
        "device": "cuda",
        "seed": 42,
        "use_wandb": false,
        "log_num_samples": 10
    },
    "data": {
        "train_src_texts_file_path": "datasets/data/train.de-en.de",
        "train_tgt_texts_file_path": "datasets/data/train.de-en.en",
        "val_src_texts_file_path": "datasets/data/val.de-en.de",
        "val_tgt_texts_file_path": "datasets/data/val.de-en.en",
        "inf_texts_file_path": "datasets/data/test1.de-en.de",

        "vocab_min_freq": 10,
        "max_len": 100,

        "train_batch_size": 32,
        "val_batch_size": 32,
        "workers": 4
    },
    "checkpoint_path": null,
    "inference": {
        "output_dir": "./inf_out/",
        "test_batch_size": 16
    },
    "train": {
        "translator": "transformer",
        "translator_args": {
            "emb_size": 256,
            "nhead": 8,
            "num_encoder_layers": 8,
            "num_decoder_layers": 8
        },
        "optimizer": "adamW",
        "optimizer_args": {
            "lr": 0.001
        },
        "scheduler": "exponential",
        "scheduler_args": {
            "gamma": 0.9,
            "warmup_steps": 3
        },
        "val_metrics": [
            "bleu"
        ],
        "epochs": 25,
        "checkpoint_epoch": 25,
        "checkpoints_dir": "./checkpoints"
    },
    "losses": {
        "cross_entropy_loss": {
            "coef": 1.0,
            "args": {
                "label_smoothing": 0.1
            }
        }
    }
}
