{
    "exp": {
        "project_name": "dl_bhw_2",
        "device": "cuda",
        "seed": 42,
        "use_wandb": false,
        "log_num_samples": 10
    },
    "data": {
        "trainval_dataset": "lang2lang_dataset",
        "test_dataset": "lang_dataset",

        "src_vocab_filename": "de_vocab",
        "dst_vocab_filename": "en_vocab",
        "vocab_args": {
            "vocab_dir": "vocabularys",
            "min_freq": 1
        },

        "train_src_texts_file_path": "datasets/data/train.de-en.de",
        "train_dst_texts_file_path": "datasets/data/train.de-en.en",
        "val_src_texts_file_path": "datasets/data/val.de-en.de",
        "val_dst_texts_file_path": "datasets/data/train.de-en.en",
        "inf_texts_file_path": "datasets/data/test1.de-en.de", 

        "train_batch_size": 64,
        "val_batch_size": 64,
        "workers": 4
    },
    "checkpoint_path": null,
    "inference": {
        "output_dir": "./",
        "test_batch_size": 64
    },
    "train": {
        "translator": "transformer",
        "translator_args": {
        },
        "optimizer": "adamW",
        "optimizer_args": {
            "lr": 0.0001
        },
        "scheduler": "multi_step",
        "scheduler_metric": "bleu",
        "scheduler_args": {
            "milestones": [6],
            "gamma": 0.1
        },
        "val_metrics": [
            "accuracy"
        ],
        "epochs": 8,
        "checkpoint_epoch": 8,
        "checkpoints_dir": "./checkpoints"
    },
    "losses": {
        "cross_entropy_loss": {
            "coef": 1.0
        }
    }
}
