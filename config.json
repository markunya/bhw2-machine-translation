{
    "exp": {
        "project_name": "dl_bhw_2",
        "device": "cuda",
        "seed": 42,
        "use_wandb": false,
        "log_num_samples": 10
    },
    "data": {
        "train_src_texts_file_path": "/data/texts/bhw2-texts/train_broken.de-en.de",
        "train_tgt_texts_file_path": "/data/texts/bhw2-texts/train_broken.de-en.en",
        "val_src_texts_file_path": "/data/texts/bhw2-texts/val.de-en.de",
        "val_tgt_texts_file_path": "/data/texts/bhw2-texts/val.de-en.en",
        "test_texts_file_path": "/data/texts/bhw2-texts/test1.de-en.de",

        "src_min_freq": 2,
        "tgt_min_freq": 2,

        "train_batch_size": 64,

        "workers": 4
    },
    "checkpoint_path": null,
    "test": {
        "output_dir": "./"
    },
    "train": {
        "translator": "transformer",
        "translator_args": {
            "emb_size": 256,
            "nhead": 8,
            "num_encoder_layers": 4,
            "num_decoder_layers": 4,
            "dim_feedforward": 1024
        },
        "optimizer": "adamW",
        "optimizer_args": {
            "lr": 0.0005
        },
        "scheduler": "cosine",
        "scheduler_args": {
            "total_steps": 250,
            "reduce_time": "period",
            "step_period": 200,
            "warmup_steps": 25
        },
        "val_metrics": [
            "bleu"
        ],
        "start_step": 1,
        "steps": 50000,
        "checkpoint_step": 10000,
        "val_step": 10000,
        "log_step": 1000,
        "checkpoints_dir": "./checkpoints"
    },
    "logics": {
        "num_idx": true,
        "remove_separators": false,
        "break_text": true,
        "drop_bos_eos_unk": true,
        "mask_idx": false
    },
    "inference": {
        "beam_size": 6,
        "repetition_penalty": 1,
        "num_mcd": 1
    },
    "losses": {
        "cross_entropy_loss": {
            "coef": 1.0,
            "args": {
                "label_smoothing": 0.1
            }
        }
    }
}
